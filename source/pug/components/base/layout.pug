doctype html

include ../components

block variables

html(lang="ru")
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content="Sandbox")

    link(rel="apple-touch-icon", sizes="180x180", href="favicon/apple-touch-icon.png")
    link(rel="icon", type="image/png", sizes="32x32", href="favicon/favicon-32x32.png")
    link(rel="icon", type="image/png", sizes="16x16", href="favicon/favicon-16x16.png")
    link(rel="manifest", href="favicon/site.webmanifest", crossorigin="use-credentials")
    link(rel="mask-icon", href="favicon/safari-pinned-tab.svg", color="#383838")
    meta(name="msapplication-TileColor", content="#ffffff")
    meta(name="msapplication-TileImage", content="/mstile-144x144.png")
    meta(name="theme-color", content="#ffffff")

    link(rel="preload", href="fonts/Comfortaa.woff2", as="font", crossorigin="anonymous")
    link(rel="stylesheet", href="css/style.min.css")

  body
    +sprite()
    .wrapper(class=wrapperMods)
      if (hasHeader)
        +header(headerMods, currentUrl)

      block main

      if (hasFooter)
        +footer(footerMods)

    block modals

    script(src="js/vendor.min.js")
    script(src="js/main.min.js")
